<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_purple"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Rewards"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494" />

    <TextView
        android:id="@+id/level_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="35"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@+id/experience_bar"
        app:layout_constraintEnd_toEndOf="@+id/experience_bar"
        app:layout_constraintStart_toStartOf="@+id/experience_bar"
        app:layout_constraintTop_toTopOf="@+id/experience_bar"
        app:layout_constraintVertical_bias="0.476" />

    <ProgressBar
        android:id="@+id/experience_bar"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/experiencebar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.329"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114" />

    <TextView
        android:id="@+id/user_title"
        android:layout_width="183dp"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:gravity="left"
        android:text="Slayer of TASKS"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/experience_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="@+id/experience_bar"
        app:layout_constraintTop_toTopOf="@+id/experience_bar"
        app:layout_constraintVertical_bias="0.282" />

    <TextView
        android:id="@+id/coin_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:gravity="left"
        android:text="100"
        app:layout_constraintBottom_toBottomOf="@+id/coin_icon"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/coin_icon"
        app:layout_constraintTop_toBottomOf="@+id/user_title"
        app:layout_constraintVertical_bias="0.766" />

    <ImageView
        android:id="@+id/coin_icon"
        android:layout_width="29dp"
        android:layout_height="36dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/experience_bar"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/experience_bar"
        app:layout_constraintTop_toBottomOf="@+id/user_title"
        app:layout_constraintVertical_bias="0.245"
        app:srcCompat="@drawable/prop_coin_4" />

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/slider"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:auto_cycle="true"
        app:delay="0"
        app:error_image="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7
"
        app:placeholder="@color/white" />

    <ImageView
        android:elevation="-.1dp"
        android:id="@+id/sliderBG"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:src="@drawable/bg_rounded_corners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>